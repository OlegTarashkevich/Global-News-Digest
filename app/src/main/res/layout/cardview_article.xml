<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_logo_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/l_size"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/article_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

        <TextView
            android:id="@+id/article_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/l_size"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

        <TextView
            android:id="@+id/article_url_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_size"
            android:autoLink="web"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

        <TextView
            android:id="@+id/article_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_size"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

    </LinearLayout>

</merge>